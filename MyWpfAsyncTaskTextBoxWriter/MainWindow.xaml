<Window x:Class="MyWpfAsyncTaskTextBoxWriter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyWpfAsyncTaskTextBoxWriter"
        mc:Ignorable="d"
        Title="MyWpfAsyncTaskTextBoxWriter" Height="450" Width="800">
    <Grid>
        <TextBox Name="textBox_Output" Text="{Binding Output}" Margin="10,10,90,10" FontSize="11" FontFamily="Courier New" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>

        <Button Name="button_Start_Task" Content="Start Task" HorizontalAlignment="Right" Margin="0,0,10,85" VerticalAlignment="Bottom" Width="75" Click="Button_Start_Click"/>
        <Button Name="button_Cancel_Task"  Content="Cancel Task" HorizontalAlignment="Right" Margin="0,0,10,60" VerticalAlignment="Bottom" Width="75" Click="Button_Cancel_Click"/>
        <Button Content="Clear" HorizontalAlignment="Right" Margin="0,0,10,35" VerticalAlignment="Bottom" Width="75" Click="Button_Clear_Click"/>
        <Button Content="Close" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75" Click="Button_Close_Click"/>

    </Grid>
</Window>
